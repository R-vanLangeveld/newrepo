<!-- Content heading -->
<% if (title) { %>
	<h1><%= title %></h1>
<% } else {
	res.redirect('/')
} %>

<%- messages() %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>
<p>You're logged in.</p>
<p id="update"><a href="/account/update" title="Click to update">Edit Account Information</a></p>

<% if (locals.accountData.account_type != "Client") { %>
	<h3>Inventory Management</h3>
	<p><a href="/inv/">Manage Inventory</a></p>
	<h3>View account lists</h3>
	<p><a href="/account/accounts">View accounts</a></p>
<% } %>
<script>document.querySelector('main').setAttribute('id', 'noGrid');</script>